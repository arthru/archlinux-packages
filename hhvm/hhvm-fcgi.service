[Unit]
Description=HHVM FastCGI application server
After=syslog.target network.target

[Service]
PIDFile=/run/hhvm/hhvm.pid
PrivateTmp=true
User=http
ExecStart=/usr/bin/hhvm --mode server -vPidFile=/run/hhvm/hhvm.pid -vServer.Type=fastcgi --config=/etc/hhvm/fastcgi.hdf --user http

[Install]
WantedBy=multi-user.target